{
  "compilerOptions": {
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "lib": [
      "es2016",
      "dom"
    ],
    "target": "es5",
    "module": "es2015",
    "types": [],
    "outDir": "./build",
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
