  "compilerOptions": {
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "lib": [
      "es2016",
      "dom"
    ],
    "target": "es5",
    "module": "es2015",
    "types": ["dist/index.d.ts"],
    "outDir": "dist",
    "baseUrl": "src"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
